@using Microsoft.AspNetCore.Identity
@using WebMathTraining.Models

@inject SignInManager<ApplicationUser> signInManager
@inject UserManager<ApplicationUser> userManager

@if (signInManager.IsSignedIn(User))
{
    var currentUser = await userManager.GetUserAsync(User);

    var isAdmin = currentUser != null
        && await userManager.IsInRoleAsync(currentUser, Constants.AdministratorRole);

    if (isAdmin)
    {
        <ul class="nav navbar-nav navbar-right">
            <li><a asp-controller="ManageUsers" asp-action="Index">Manage Users</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li><a asp-controller="TestQuestion" asp-action="Index" asp-route-levelFilter="@currentUser.ExperienceLevel">Manage Questions</a></li>
        </ul>
    }

    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="TestSessions" asp-action="Index">My Tests</a></li>
    </ul>

}
